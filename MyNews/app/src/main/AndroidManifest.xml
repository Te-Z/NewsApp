<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zafindratafa.terence.mynews">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controllers.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.Activities.WebActivity">
        </activity>
        <activity
            android:name=".Controllers.Activities.SearchActivity"
            android:parentActivityName=".Controllers.Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.MainActivity"/>
        </activity>
        <activity
            android:name=".Controllers.Activities.ResultActivity"
            android:parentActivityName=".Controllers.Activities.SearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.SearchActivity"/>
        </activity>
        <activity
            android:name=".Controllers.Activities.NotifActivity"
            android:parentActivityName=".Controllers.Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.MainActivity"/>
        </activity>
        <receiver android:name=".Utils.NotificationReceiver"/>
    </application>

</manifest>